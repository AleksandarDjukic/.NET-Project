@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">

        @for (int i = 0; i < ViewBag.ponuda.Length; i++)
        {
            <div class="col-sm-4 kartica">
                <a href="Home/Product/?id=@i"><p class="naziv1">@ViewBag.ponuda[i].naziv</p></a>
                <img src="@ViewBag.ponuda[i].slika" class="img-responsive" style="width:300px;height:150px;" alt="Image">
                @ViewBag.ponuda[i].cena €
            </div>
        }
    </div>
</div>